   <section id="services">
    <div class="container wow fadeInUp">
      <div class="row">
        <div class="col-md-12">
          <h3 class="section-title">Nos Services</h3>
          <div class="section-title-divider"></div>
          <p class="section-description">Royal Touch communication met avotre disposition une panoplie de service de pointe vous permettant ainsi vous épanouir dans le monde du digital</p>
        </div>
      </div>

      <div class="row">
        {% for service in services %}
          <div class="col-md-4 service-item">
            <div class="service-icon"><i class="{{service.icone.code}}"></i></div>
            <h4 class="service-title"><a href="">{{service.title}}</a></h4>
            <p class="service-description">{{service.description}}</p>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
<section id="portfolio">
    <div class="container wow fadeInUp">
      <div class="row">
        <div class="col-md-12">
          <h3 class="section-title">Portfolio</h3>
          <div class="section-title-divider"></div>
          <p class="section-description">Royal Touch, c'est une panoplie de service réalisé par des proffessionele du monde de la technologie, venez et soyez servie</p>
        </div>
      </div>

      <div class="row">
      {% for portfolio in portfolios %}
        <div class="col-md-3">
          <a class="portfolio-item" style="background-image: url({% static 'listings/img/'%}{{portfolio.image.imgP}});" href="">
            <div class="details">
              <h4>{{ portfolio.title}}</h4>
              <span>{{ portfolio.description}}</span>
            </div>
          </a>
        </div>
        {% endfor %}
      </div>
    </div>
  </section>
  <section id="team">
    <div class="container wow fadeInUp">
      <div class="row">
        <div class="col-md-12">
          <h3 class="section-title">Notre Team</h3>
          <div class="section-title-divider"></div>
          <p class="section-description">Guidé par un but commun les fondateurs, voici les fondateurs de Ryal Touch Communication</p>
        </div>
      </div>

      <div class="row">
        {% for team in teams %}
          <div class="col-md-4">
            <div class="member">
              <div class="pic"><img src="{% static 'listings/img/'%}{{team.photo.imgP}}" alt=""></div>
              <h4>{{team.nom}}</h4>
              <span>{{team.role}}</span>
              <div class="social">
                <a href=""><i class="fa fa-twitter"></i></a>
                <a href=""><i class="fa fa-facebook"></i></a>
                <a href=""><i class="fa fa-google-plus"></i></a>
                <a href=""><i class="fa fa-linkedin"></i></a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
  <section id="contact">
    <div class="container wow fadeInUp">
      <div class="row">
        <div class="col-md-12">
          <h3 class="section-title">Contact Us</h3>
          <div class="section-title-divider"></div>
          <p class="section-description">Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque</p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-3 col-md-push-2">
          <div class="info">
            <div>
              <i class="fa fa-map-marker"></i>
              <p>A108 Adam Street<br>New York, NY 535022</p>
            </div>

            <div>
              <i class="fa fa-envelope"></i>
              <p>info@example.com</p>
            </div>

            <div>
              <i class="fa fa-phone"></i>
              <p>+1 5589 55488 55s</p>
            </div>

          </div>
        </div>

        <div class="col-md-5 col-md-push-2">
          <div class="form">
            <div id="sendmessage">Your message has been sent. Thank you!</div>
            <div id="errormessage"></div>
            <form action="" method="post" role="form" class="contactForm">
              {% csrf_token %}
              {% for field in form %}
                <div class="form_group">
                 {{field.label_tag}}{% if field.field.required %}<span class="required"></span>{% endif %}
                 {{field}}
                 {% if field.help_text %}
                  <p class="help">{{field.help_text}}</p>
                  {% endif %}
                </div>
              {% endfor %}
              <input type="submit" class="btn btn-primary" value="send">
            </form>
          </div>
        </div>

      </div>
    </div>
  </section>
{% endblock %}